<plugin name='ic-alendar' version='0.3.5' grailsVersion='2.0.0 &gt; *'>
  <author>Silvio Wangler</author>
  <authorEmail>silvio.wangler@gmail.com</authorEmail>
  <title>iCalendar Plug-in</title>
  <description>
        This plugin contains a builder to easily convert your event into the iCalendar format.
        The plugin hooks replaces each render method that uses the contentType 'text/calendar'.
	</description>
  <documentation>http://grails.org/ICalendar+Plugin</documentation>
  <type>ICalendarGrailsPlugin</type>
  <resources />
  <repositories>
    <repository name='grailsCentral' url='http://grails.org/plugins' />
    <repository name='http://grails.org/plugins' url='http://grails.org/plugins' />
  </repositories>
  <dependencies>
    <compile>
      <dependency group='org.mnode.ical4j' name='ical4j' version='1.0.4' />
    </compile>
    <runtime>
      <dependency group='backport-util-concurrent' name='backport-util-concurrent' version='3.1' />
    </runtime>
  </dependencies>
  <plugins />
  <runtimePluginRequirements>
    <plugin name='controllers' version='2.0.0 &gt; *' />
  </runtimePluginRequirements>
  <behavior />
</plugin>